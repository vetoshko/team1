.signin
    box-shadow 0 0 8px -1px rgba(84, 84, 84, .25)
    padding 60px 45px
    border-radius 3px
    width 350px

.form
    display flex
    flex-direction column

    &__header
        font 500 1em 'Graphik Web', Helvetica, Arial, sans-serif
        text-transform uppercase
        letter-spacing 1px
        text-align center
        color #8e8d8d
        margin 0 0 30px 0

    &__input
        font 300 .8em 'Graphik Web', Helvetica, Arial, sans-serif
        line-height 35px
        color #a9a9a9
        margin 6px 0
        padding 10px 20px
        outline-color #fe7877
        background-color #f4f4f4
        border-radius 3px
        border 1px solid #ebebeb
        height 45px
        width 100%
        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box

    &__button
        font 300 .78em 'Graphik Web', Helvetica, Arial, sans-serif
        text-transform uppercase
        letter-spacing 1px
        line-height 35px
        color #fff
        background-color #fe7877
        outline none
        border none
        border-radius 3px
        cursor pointer
        margin-top 30px
        height 45px


.question
    font 300 .6em 'Graphik Web', Helvetica, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    color #8e8d8d
    text-align center
    padding-top 15px
    margin-top 10px
