@import '../../blocks/header/header.styl'
@import '../../blocks/footer/footer.styl'
@import '../../components/quests/quest.styl'
@import '../../components/quests/questEdit.styl'
@import '../../components/comments/CommentList.styl'
@import '../../components/comments/Comment.styl'

html,
body
    padding 0
    margin 0
    width 100%
    display flex
    min-height 100vh
    flex-direction column

.main
    display flex
    flex: 1 0 auto
    justify-content center
    align-items center

.photo-list
    &__item
        font: 400 1em 'Graphik Web', Helvetica, Arial, sans-serif
        background-color: #fff
        box-shadow: 0 5px 15px rgba(0,0,0,0.05)
        border-radius: 3px
        margin-bottom: 40px
        width: 100%
        flex-direction: column
    &__content
        display: flex
        justify-content: center
    &__content img
        width: 100%
        display: block
        justify-content: center
    &__photo-description
        font: 600 1em 'Graphik Web', Helvetica, Arial, sans-serif;
        line-height: 2em
        vertical-align: middle
        text-align: center
        margin-top: 10px
